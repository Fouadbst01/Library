<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css"
        />
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <a href="{{ path('landingpage_index') }}" class="logo">Librar<span>Y.</span></a>
            <div class="bx bx-menu" id="menu-icon"></div>
            <ul class="navbar">
                <li><a href="{{ path('livre_index') }}">Livre</a></li>
                <li><a href="{{ path('auteur_index') }}">Auteur</a></li>
                <li><a href="{{ path('genre_index') }}">Genre</a></li>
                <li id="login"><a href="{{ path('app_login') }}">Login</a></li>
            </ul>
        </header>
        {% block body %}{% endblock %}
    </body>
</html>